<Window x:Class="NguTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="loadSaveButton" Content="Load from save file" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" Click="loadSaveButton_Click"/>
        <Button x:Name="loadJsonButton" Content="Load from json file" HorizontalAlignment="Left" Height="28" Margin="145,10,0,0" VerticalAlignment="Top" Width="130" Click="loadJsonButton_Click"/>

    </Grid>
</Window>
